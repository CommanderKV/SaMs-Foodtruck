{
    "openapi": "3.1.0",
    "info": {
        "title": "SaM's Foodtruck API",
        "description": "API for SaM's Foodtruck",
        "version": "1.0.0"
    },
    "tags": [
        {
            "name": "Products",
            "description": "Operations about products"
        }
    ],
    "paths": {
        "/products": {
            "get": {
                "summary": "Get all products",
                "tags": ["Products"],
                "responses": {
                    "200": {
                        "description": "Successfully obtained products",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "properties": {
                                        "id": {
                                            "type": "integer"
                                        },
                                        "name": {
                                            "type": "string"
                                        },
                                        "price": {
                                            "type": "number"
                                        },
                                        "category": {
                                            "type": "string"
                                        },
                                        "description": {
                                            "type": "string"
                                        }
                                    }
                                },
                                "example": {
                                    "id": 1,
                                    "name": "Burger",
                                    "price": 5.99,
                                    "category": "Main",
                                    "description": "A delicious burger"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Failed to retrieve menu items",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "status": {
                                            "type": "string"
                                        },
                                        "message": {
                                            "type": "string"
                                        }
                                    },
                                    "example": {
                                        "status": "failure",
                                        "message": "Failed to retrieve menu items"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/products/{id}": {
            "get": {
                "summary": "Get a product by their id",
                "tags": ["Products"],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        },
                        "description": "The id of the product",
                        "example": 1
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successfully obtained product",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "id": {
                                            "type": "integer"
                                        },
                                        "name": {
                                            "type": "string"
                                        },
                                        "price": {
                                            "type": "number"
                                        },
                                        "category": {
                                            "type": "string"
                                        },
                                        "description": {
                                            "type": "string"
                                        },
                                        "ingredients": {
                                            "type": "array",
                                            "items": {
                                                "type": "object",
                                                "properties": {
                                                    "id": {
                                                        "type": "integer"
                                                    },
                                                    "quantity": {
                                                        "type": "number"
                                                    },
                                                    "measurement": {
                                                        "type": "string"
                                                    }
                                                },
                                                "required": ["id", "quantity", "measurement"]
                                            }
                                        }
                                    },
                                    "example": {
                                        "id": 1,
                                        "name": "Burger",
                                        "price": 5.99,
                                        "category": "Main",
                                        "description": "A delicious burger",
                                        "ingredients": [
                                            {
                                                "id": 1,
                                                "quantity": 1,
                                                "measurement": "patty"
                                            },
                                            {
                                                "id": 2,
                                                "quantity": 1,
                                                "measurement": "bun"
                                            }
                                        ]
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid id or product not found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "status": {
                                            "type": "string"
                                        },
                                        "message": {
                                            "type": "string"
                                        }
                                    },
                                    "example": {
                                        "status": "failure",
                                        "message": "Invalid id or product not found"
                                    }
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Failed to retrieve menu items",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "status": {
                                            "type": "string"
                                        },
                                        "message": {
                                            "type": "string"
                                        }
                                    },
                                    "example": {
                                        "status": "failure",
                                        "message": "Failed to retrieve menu items"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/products/create": {
            "post": {
                "summary": "Create a new product",
                "tags": ["Products"],
                "parameters": [
                    {
                        "name": "name",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "description": "The name of the product",
                        "example": "Burger"
                    },
                    {
                        "name": "description",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "description": "The description of the product",
                        "example": "A delicious burger"
                    },
                    {
                        "name": "photo",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "description": "The photo of the product as a base64 encoded string",
                        "example": "data:image/png;base64,iVBORw0KGgoAAAANSUh..."
                    },
                    {
                        "name": "price",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "type": "number"
                        },
                        "description": "The price of the product",
                        "example": 5.99
                    },
                    {
                        "name": "ingredients",
                        "in": "body",
                        "required": false,
                        "schema": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "id": {
                                        "type": "integer"
                                    },
                                    "quantity": {
                                        "type": "number"
                                    },
                                    "measurement": {
                                        "type": "string"
                                    }
                                },
                                "required": ["id", "quantity", "measurement"]
                            }
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Successfully created product",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "status": {
                                            "type": "string"
                                        }
                                    },
                                    "example": {
                                        "status": "success"
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid product data",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "status": {
                                            "type": "string"
                                        },
                                        "message": {
                                            "type": "string"
                                        }
                                    },
                                    "example": {
                                        "status": "failure",
                                        "message": "Invalid product data"
                                    }
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Failed to create product",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "status": {
                                            "type": "string"
                                        },
                                        "message": {
                                            "type": "string"
                                        }
                                    },
                                    "example": {
                                        "status": "failure",
                                        "message": "Failed to create product"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/products/update": {
            "put": {
                "summary": "Update a product by their id",
                "tags": ["Products"],
                "parameters": [
                    {
                        "name": "id",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        },
                        "description": "The id of the product",
                        "example": 1
                    },
                    {
                        "name": "name",
                        "in": "body",
                        "required": false,
                        "schema": {
                            "type": "string"
                        },
                        "description": "The name of the product",
                        "example": "Burger"
                    },
                    {
                        "name": "description",
                        "in": "body",
                        "required": false,
                        "schema": {
                            "type": "string"
                        },
                        "description": "The description of the product",
                        "example": "A delicious burger"
                    },
                    {
                        "nae": "photo",
                        "in": "body",
                        "required": false,
                        "schema": {
                            "type": "string"
                        },
                        "description": "The photo of the product as a base64 encoded string",
                        "example": "data:image/png;base64,iVBORw0KGgoAAAANSUh..."
                    },
                    {
                        "name": "price",
                        "in": "body",
                        "required": false,
                        "schema": {
                            "type": "number"
                        },
                        "description": "The price of the product",
                        "example": 5.99
                    },
                    {
                        "name": "ingredients",
                        "in": "body",
                        "required": false,
                        "schema": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "id": {
                                        "type": "integer"
                                    },
                                    "quantity": {
                                        "type": "number"
                                    },
                                    "measurement": {
                                        "type": "string"
                                    }
                                },
                                "required": ["id", "quantity", "measurement"]
                            }
                        },
                        "description": "The ingredients of the product",
                        "example": [
                            {
                                "id": 1,
                                "quantity": 1,
                                "measurement": "patty"
                            },
                            {
                                "id": 2,
                                "quantity": 1,
                                "measurement": "bun"
                            }
                        ]
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successfully updated product",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "status": {
                                            "type": "string"
                                        }
                                    },
                                    "example": {
                                        "status": "success"
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid id or product data",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "status": {
                                            "type": "string"
                                        },
                                        "message": {
                                            "type": "string"
                                        }
                                    },
                                    "example": {
                                        "status": "failure",
                                        "message": "Invalid id or product data"
                                    }
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Failed to update product",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "status": {
                                            "type": "string"
                                        },
                                        "message": {
                                            "type": "string"
                                        }
                                    },
                                    "example": {
                                        "status": "failure",
                                        "message": "Failed to update product"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/products/delete": {
            "delete": {
                "summary": "Delete a product by their id",
                "tags": ["Products"],
                "parameters": [
                    {
                        "name": "id",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        },
                        "description": "The id of the product",
                        "example": 1
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successfully deleted product",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "status": {
                                            "type": "string"
                                        },
                                        "message": {
                                            "type": "string"
                                        }
                                    },
                                    "example": {
                                        "status": "success",
                                        "message": "Successfully deleted product"
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid id",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "status": {
                                            "type": "string"
                                        },
                                        "message": {
                                            "type": "string"
                                        }
                                    },
                                    "example": {
                                        "status": "failure",
                                        "message": "Invalid id"
                                    }
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Failed to delete product",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "status": {
                                            "type": "string"
                                        },
                                        "message": {
                                            "type": "string"
                                        }
                                    },
                                    "example": {
                                        "status": "failure",
                                        "message": "Failed to delete product"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }

        
    }
}